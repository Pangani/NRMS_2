<div class="col-md-12">

  <div class="col-md-6">

      <%= f.input :admission_referred_by, :label => "Referred By",placeholder: 'Referred By', collection: ["Own", "otherOTP", "NRU"], selected: "own" %>

      <%= f.input :anthropometry_weight, :label => "Admission Weight(kg):",placeholder: 'Weight(kg)' %>

      <%= f.input :anthropometry_height, :label => "Admission Height(cm):",placeholder: 'Height(cm)' %>

      <%= f.input :anthropometry_MUAC, :label => "MUAC(mm):",placeholder: 'MUAC(mm)' %>

      <%= f.input :anthropometry_z_score, :label => "Z-Score:",placeholder: 'e.g -3' %>


      <%= f.input :anthropometry_oedema, :label => "Admission Oedema Status:",placeholder: '++',  collection: ["no_oedema", "level_one", "level_two", "level_three"], selected: "no_oedema" %>

      <%= f.input :admission_admission_criteria, :label => "Admission Criteria:",placeholder: 'Admission Criteria',  collection: ["muac", " z_score", "bilateral_oedema", "bmi_for_age"], selected: "muac" %>
   
      <%= f.input :test_clinician_name, :label => "Clinician Name:",placeholder: 'Clinician Name' %>

  </div>

  <div class="col-md-6" >

      <label for="test_Appetite_test">Appetite Test:</label>
      <dt>
        <%=f.collection_radio_buttons :test_Appetite_test, [[true, 'Has appetite  '] ,[false, 'No appetite']], :first, :last%>
      </dt>

      <label for="test_yes_appetite">Level of Appetite:</label>
      <dt>
        <%= f.select :test_yes_appetite, options_for_select([['Very Good','very_good'],['Good','good'],['Poor','poor'], ['Very Poor', 'very_poor']], params[:test_yes_appetite]),{}, { :class => 'span3 controls controls-row' } %>
      </dt>
     
      <div class="form-group">
          <label for="test_breastfeeding">BreastFeeding:</label>
          <dt><%= f.radio_button(:test_breastfeeding, 'Yes')%> Yes
              <%= f.radio_button(:test_breastfeeding, 'No' )%> No</dt>
      </div>
        	
      <div class="form-group">
          <label for="test_complementery_food">Complementary Food:</label>
          <dt><%= f.radio_button(:test_complementery_food, 'Yes')%> Yes
              <%= f.radio_button(:test_complementery_food, 'None')%> No</dt>
      </div>

      <div class="form-group">
          <label for="test_vomiting">Vomiting:</label>
          <dt>
              <%= f.radio_button(:test_vomiting, 'Yes')%> Yes
              <%= f.radio_button(:test_vomiting, 'No')%> No
          </dt>
      </div>

    

      <div class="form-group">
        <label for="test_stools">Stools:</label>
        <dt><%= f.radio_button(:test_stools, 'three')%> 1-3 times
              <%= f.radio_button(:test_stools, 'four')%> 3-4 times
              <%= f.radio_button(:test_stools, 'five')%> >5 times</dt>
      </div>
        
      <div class="form-group">
        <label for="test_alert">Alert? :</label>
        <dt><%= f.radio_button(:test_alert, 'true')%> Yes
              <%= f.radio_button(:test_alert, 'false')%> No</dt>
      </div>

      <%= f.input :test_prev_medical_history, :label => "Previous Medical History:" %>

  </div>

</div>

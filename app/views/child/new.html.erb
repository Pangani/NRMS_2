
<div class="jumbotron jumbotron-fluid">

  <div class="panel panel-primary panel-transparent">
      <div class="panel-heading">CHILD REGISTRATION (BIO-DATA)</div>
      <div class="panel-body">

       <%= simple_form_for @child, :url => url_for(:action => 'create', :controller => 'child'),
          :method => 'post'  do |f| %>

              <%= render(:partial => "form", :locals => {:f => f}) %>

              <div class="col-md-12">
                  <div class="pull-left">
                    <%= link_to '<< Back', url_for(:action => 'index', :controller => 'child'), class: 'btn btn-primary btn-medium'%>
                  </div>
                  <div class="pull-right">
                    <%= f.button :submit, 'Register ', class: 'btn btn-primary btn-lg' %>
                  </div>
              </div>
      <% end %>
      </div>
      
    </div>
  </div>

</div>


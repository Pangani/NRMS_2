
<center><h1>OTP REGISTER BOOK</h1></center>

<div class="col-md-12" style="padding-top: 30px;"> 
  <br>

  <table id="child" class="table table-striped table-bordered" cellspacing="0"   >
       
          <thead>
              <tr>
                <th>Registration #</th>
                <th>Name</th>
                <th> child's Gender</th>
                <th>Guardian Name</th>
                <th>T/A</th>
                <th>village</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
          </thead>


    <tbody style="color:#a65959" >
              <% @child_otp.each do |child| %>

                <tr>
                    <td><%=child.reg_number%></td>
                    <td><%= child.full_name %></td>
                    <td> <%=child.sex %> </td>
                    <td><%=child.guardian_name%></td>
                    <td><%=child.trad_authority %></td>
                    <td> <%=child.village%>


                     <td ><%= link_to("Show", {:action =>'show', :id =>child.id}, :class => 'fa  fa-eye fa-lg') %></td>

                     <td> <%= link_to("Edit", {:action => 'edit', :id =>child.id}, :class => 'fa  fa-edit fa-lg ') %></td>
                     <td><%= link_to("Delete", {:action =>'delete', :id =>child.id}, :class => 'fa  fa-trash fa-lg') %>
                      
                     </td>

                </tr>
              <% end %>

          </tbody>
     
  </table>

<hr>
</div>
<div>
<%= link_to '<< Back', url_for(:action => 'records' ,:controller => 'child') , :class => "btn btn-primary btn-default" %> 
 
</div>

<style type="text/css">
  h1{
    text-decoration: underline;
  }
</style>
   
<script type="text/javascript">

    $(document).ready(function() {
    $('#child').DataTable();
} );

</script>


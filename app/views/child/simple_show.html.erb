<div class="jumbotron"  >
<dl class="dl-horizontal">
     <div class="panel panel-transparent">
        <div class="panel-heading">
        	<h3>CONFIRM DETAILS</h3>
        </div>

        <div class="panel-body">
        	
            <div class="row">  
              <h3><i>Bio-data</i></h3>
                  <div class="col-xs-6" >
                   <em> 
                    <table>
                      <div>
                      	<p><strong>Full Name : </strong><%= @child.full_name %></p>
                      </div>

                      <div>
                      	<p><strong> Registration Number : </strong><%= @child.reg_number %></p>
                      </div>

                      <div>
                        <p><strong> Gender  </strong>:<%= @child.sex %></em></p>
                      </div>
                      
                      <div>
                        <p><strong> Age : </strong><%= @child.age_in_months%> months old (approx. <%= @child.age%> yrs)</em></p>
                      </div>
                      
                       <div>
                        <p><strong>HIV Serostatus  :</strong>  <em><%= @child.HIV_serostatus %></em></p>
                      </div>

                      <div>
                        <p><strong>On ART? : </strong><%= @child.on_ART ? 'Yes' : 'No' %></em></p>
                      </div>
                      
                       <div>
                        <p><strong>A Twin child? : </strong> <em><%= @child.twin_child %></em></p>
                      </div>
                    </table>
                    </em>  
                  </div>

                  <div class="col-xs-6">
                    <em>
                      <div>
                        <p><strong>Child's Guardian  :</strong>     <em><%= @child.guardian_name %></em></p>
                      </div>

                      <div>
                        <p><strong>Maternal HIV Serostatus  :</strong>   <%= @child.maternal_HIV_serostatus %></p>
                      </div>

                      <div>
                        <p><strong>Village   :</strong>   <%= @child.village %></p>
                      </div>

                      <div>
                        <p><strong>T/A   : </strong>    <%= @child.trad_authority %></p>
                      </div>

                      <div>
                        <p><strong>District   :</strong>     <em><%= @child.district %></em></p>
                      </div>
                    </em>
                  </div>
            <br /><br />
            <hr>
            </div>
        </div>
    </div>
    <div class="row">
    	<div id="myButton" class="col-md-8 col-offset-4">
    		<%= link_to 'CONFIRM' , url_for( :action => 'new', :controller => 'assessment', :child_id => @child.id), :class => 'btn btn-primary btn-default' %>
      </div>
    </div>
    <%= link_to 'Edit', url_for(:action => 'edit', :id =>@child.id ,:controller => 'child') , :class => "btn btn-default btn-default" %>        
</dl>
</div>

<style type="text/css">
  h3{
    text-decoration: underline;
  }
</style>
